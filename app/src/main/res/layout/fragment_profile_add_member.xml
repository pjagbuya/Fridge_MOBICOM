<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addMemberLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/header_rounded_corners"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MY PROFILE"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Main Content -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingTop="24dp"
        android:text="Name"
        android:textColor="@android:color/black"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/instructionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:paddingStart="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="16dp"
        android:text="Enter a registered email address to add as member:"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <!-- Inventory Name -->
    <TextView
        android:id="@+id/inventoryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:paddingStart="24dp"
        android:text="Inventory Name"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/inventoryNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@android:color/darker_gray"
        android:hint="e.g. Mary's Inventory"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@android:color/black" />

    <!-- Email and Nickname Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@android:color/black" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/nicknameInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:hint="Nickname"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <!-- Add Member Button -->

    <!-- Cancel and Invite Buttons -->
    <TextView
        android:id="@+id/addMemberErrorTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/red"
            android:text="Cancel"
            android:textColor="@android:color/white"
            app:background="@color/red" />

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/inviteBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/light_green"
            android:text="Invite"
            android:textColor="@android:color/white"
            app:background="@color/black" />
    </LinearLayout>
</LinearLayout>
