<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner_forms_bothalf"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="30dp"
    android:paddingEnd="10dp"
    android:paddingBottom="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/left_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0.0005"
            android:background="@drawable/ic_arrow_left"
            android:backgroundTint="@color/brown"
            android:backgroundTintMode="add" />

        <ImageView
            android:id="@+id/container_iv"
            android:layout_width="257dp"
            android:layout_height="134dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:layout_weight="0.999"
            tools:srcCompat="@drawable/container_type_1_fridge" />

        <Button
            android:id="@+id/right_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0.0005"
            android:background="@drawable/ic_arrow_right"
            android:backgroundTint="@color/brown"
            android:backgroundTintMode="add" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="0.5"
            android:fontFamily="@font/chela_one"
            android:letterSpacing="0.1"
            android:text="@string/cancel_text"
            android:textSize="24sp" />

        <Button
            android:id="@+id/ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="0.5"
            android:backgroundTint="@color/light_green"
            android:fontFamily="@font/chela_one"
            android:letterSpacing="0.1"
            android:text="@string/ok_text"
            android:textColor="@android:color/white"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>