<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/containerMain">


    <fragment
        android:id="@+id/containerMain"
        android:name="com.mobdeve.agbuya.hallar.hong.fridge.fragment.ContainerActivityFragmentMain"
        android:label="Fridge: Container List View"
        tools:layout="@layout/container_activity_main" >
        <action
            android:id="@+id/action_containerMain_to_containerAdd"
            app:destination="@id/containerAdd" />
        <action
            android:id="@+id/action_containerMain_to_containerUpdate"
            app:destination="@id/containerUpdate" />
    </fragment>
    <fragment
        android:id="@+id/containerAdd"
        android:name="com.mobdeve.agbuya.hallar.hong.fridge.fragment.ContainerActivityFragmentAdd"
        android:label="Fridge: Container Add"
        tools:layout="@layout/container_activity_add" >
        <action
            android:id="@+id/action_containerAdd_to_containerMain"
            app:destination="@id/containerMain" />
    </fragment>

    <fragment
        android:id="@+id/containerUpdate"
        android:name="com.mobdeve.agbuya.hallar.hong.fridge.fragment.ContainerActivityFragmentUpdate"
        android:label="Fridge: Container Update"
        tools:layout="@layout/container_activity_update" >

        <action
            android:id="@+id/action_containerUpdate_to_containerMain"
            app:destination="@id/containerMain" />
        <argument
            android:name="currentContainer"
            app:argType="com.mobdeve.agbuya.hallar.hong.fridge.rooms.ContainerEntity" />
    </fragment>
    <fragment
        android:id="@+id/groceriesMain"
        android:name="com.mobdeve.agbuya.hallar.hong.fridge.fragment.GroceryActivityFragmentMain"
        android:label="Fridge: Grocery List View"
        tools:layout="@layout/groceries_activity_main" />
    <fragment
        android:id="@+id/groceriesView"
        android:name="com.mobdeve.agbuya.hallar.hong.fridge.fragment.GroceryActivityFragmentView"
        android:label="Fridge: Grocery View"
        tools:layout="@layout/grocery_component_view" />
    <fragment
        android:id="@+id/groceriesEdit"
        android:name="com.mobdeve.agbuya.hallar.hong.fridge.fragment.GroceryActivityFragmentEdit"
        android:label="Fridge: Grocery"
        tools:layout="@layout/grocery_component_update" />
    <!--This section are arguments that EDIT_TYPE can be passed towards -->
    <argument
        android:name="EDIT_TYPE"
        app:argType="integer" />


    <!-- Actions Regarding how to transition -->
    <action
        android:id="@+id/gotoContainerMain"
        app:destination="@id/containerMain"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right"
        />

    <action
        android:id="@+id/gotoGroceriesEdit"
        app:destination="@id/groceriesEdit"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right"
        />
    <action
        android:id="@+id/gotoGroceriesView"
        app:destination="@id/groceriesView"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right"
        />
</navigation>